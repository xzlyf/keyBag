<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.LoginSettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/transparent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tv_back"
                style="@style/img_onclick_yuanxing"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:padding="@dimen/dp_5"
                android:src="@mipmap/ic_back"
                android:tint="@color/primary_text" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_10"
                android:text="密码管理"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>


        <ImageView
            android:id="@+id/banner"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/background_yuanjiao_3"
            android:paddingStart="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_5"
            android:text="●安全保障中..."
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_change"
            style="@style/secret_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="修改密钥" />

        <TextView
            android:id="@+id/tv_share"
            style="@style/secret_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="分享密钥" />

        <TextView
            android:id="@+id/tv_login"
            style="@style/secret_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="进入密码" />

        <Switch
            android:id="@+id/sw_fingerprint"
            style="@style/secret_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:text="指纹登录" />

        <Switch
            android:id="@+id/sw_forget"
            style="@style/secret_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:paddingBottom="0dp"
            android:text="密码防忘记" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:padding="@dimen/dp_5"
            android:paddingStart="@dimen/dp_20"
            android:singleLine="true"
            android:text="开启后将会每隔几天优先显示密码登录，以防忘记密码"
            android:textIsSelectable="false"
            android:textSize="12sp" />

        <Switch
            android:id="@+id/sw_pwd_public"
            style="@style/secret_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:paddingBottom="0dp"
            android:text="隐藏明文密码" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:padding="@dimen/dp_5"
            android:paddingStart="@dimen/dp_20"
            android:singleLine="true"
            android:text="开启后主页的密码将会使用'*'号代替"
            android:textIsSelectable="false"
            android:textSize="12sp" />

    </LinearLayout>
</ScrollView>