<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nav_background"
    android:overScrollMode="never"
    tools:context=".activity.AboutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/transparent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tv_back"
                style="@style/img_onclick_yuanxing"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:padding="@dimen/dp_5"
                android:src="@mipmap/ic_back"
                android:tint="@color/primary_text" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_weight="1"
                android:text="关于软件！"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

        <ImageView
            android:id="@+id/image_launch"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:layout_gravity="center"
            android:layout_margin="25dp" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="v1.0"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_25"
            android:text="[钥匙包]保证不会记录您的信息和密码数据，所有数据均存储在本地。网络权限仅用于[数据搬家]服务，若不放心可以禁用网络权限，但相应的[数据搬家]服务可能异常。
                \n\n[钥匙包]采用了AES、SHA256和RSA多种加密算法混合加密数据，即使数据被盗取，仍可起到很大程度的保护功能。
                \n\n同时[钥匙包]将会持续更新版本迭代，相关下载需要您手动前往下载。"
            android:textColor="@color/secondary_text" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_30"
            android:text="关注公众号"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/sp_22" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="获取最新版本，了解最新版本动态"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/sp_18" />

        <ImageView
            android:id="@+id/ic_wechat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_30"
            android:adjustViewBounds="true"
            android:contentDescription="微信搜一搜：小泽干货铺" />

        <com.xz.keybag.custom.IconTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_20"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="@dimen/dp_5"
            android:text="如何关注公众号？"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/sp_16"
            app:icon_src="@mipmap/ic_about" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="方法1：微信搜索[小泽干货铺]"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_30"
            android:text="方法2：截图保存二维码图片，然后打开微信扫一扫，通过相册识别二维码即可。"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_jump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_50"
            android:clickable="true"
            android:focusable="true"
            android:text="点击跳转到微信>>>"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/sp_22" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp_20"
            android:text="©2021 Xzlyf Studio.All rights reserved."
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>