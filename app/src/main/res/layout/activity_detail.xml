<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailActivity">

    <FrameLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:padding="@dimen/dp_5"
            android:src="@mipmap/ic_back"
            android:tint="@color/primary_text" />

        <TextView
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@drawable/btn_rectangle"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/dp_5"
            android:text="保存"
            android:textColor="@color/primary_text"
            android:textStyle="bold" />

    </FrameLayout>


    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@null"
        android:hint="名称"
        android:maxLength="64"
        android:singleLine="true"
        android:textColor="@color/primary_text"
        android:textColorHint="@color/primary_text"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bar" />

    <ImageView
        android:id="@+id/name_edit"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_3"
        android:src="@drawable/ic_editor"
        app:layout_constraintBottom_toBottomOf="@+id/name"
        app:layout_constraintLeft_toRightOf="@+id/name" />

    <EditText
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@null"
        android:hint="账号"
        android:maxWidth="@dimen/dp_300"
        android:maxLength="64"
        android:singleLine="true"
        android:textColor="@color/primary_text"
        android:textColorHint="@color/primary_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name" />

    <ImageView
        android:id="@+id/user_edit"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_3"
        android:src="@drawable/ic_editor"
        app:layout_constraintBottom_toBottomOf="@+id/user"
        app:layout_constraintLeft_toRightOf="@+id/user" />

    <EditText
        android:id="@+id/pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@null"
        android:hint="密码"
        android:maxWidth="@dimen/dp_300"
        android:maxLength="64"
        android:singleLine="true"
        android:textColor="@color/primary_text"
        android:textColorHint="@color/primary_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user" />

    <ImageView
        android:id="@+id/pwd_edit"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_3"
        android:src="@drawable/ic_editor"
        app:layout_constraintBottom_toBottomOf="@+id/pwd"
        app:layout_constraintLeft_toRightOf="@+id/pwd" />

    <EditText
        android:id="@+id/remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@null"
        android:hint="备注信息"
        android:maxWidth="@dimen/dp_300"
        android:maxLength="255"
        android:textColor="@color/primary_text"
        android:textColorHint="@color/primary_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pwd" />

    <ImageView
        android:id="@+id/remark_edit"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_3"
        android:src="@drawable/ic_editor"
        app:layout_constraintBottom_toBottomOf="@+id/remark"
        app:layout_constraintLeft_toRightOf="@+id/remark" />

    <TextView
        android:id="@+id/endtime_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_20"
        android:text="最后修改时间："
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/remark" />

    <TextView
        android:id="@+id/end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/endtime_tips" />

</androidx.constraintlayout.widget.ConstraintLayout>