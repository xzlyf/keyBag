<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                style="@style/img_onclick_yuanxing"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:padding="@dimen/dp_5"
                android:src="@mipmap/ic_back"
                android:tint="@color/white" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_10"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_10"
                android:background="@drawable/btn_yuanxin_common"
                android:clickable="true"
                android:focusable="true"
                android:paddingStart="@dimen/dp_5"
                android:paddingTop="@dimen/dp_2"
                android:paddingEnd="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_2"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <com.xz.keybag.custom.UnifyEditView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/category_background"
            android:elevation="@dimen/dp_2"
            app:hint="请输入..."
            app:hintColor="@color/secTextColor"
            app:label="名称："
            app:textColor="@color/category_text_2" />

        <com.xz.keybag.custom.UnifyEditView
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/category_background"
            android:elevation="@dimen/dp_2"
            app:hint="请输入..."
            app:hintColor="@color/secTextColor"
            app:label="账号："
            app:textColor="@color/category_text_2" />

        <com.xz.keybag.custom.UnifyEditView
            android:id="@+id/pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/category_background"
            android:elevation="@dimen/dp_2"
            app:hint="请输入..."
            app:hintColor="@color/secTextColor"
            app:label="密码："
            app:textColor="@color/category_text_2" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/category_background"
            android:elevation="@dimen/dp_2"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_6"
                android:text="分类标签"
                android:textColor="@color/category_text_2" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/category_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginBottom="@dimen/dp_6" />
        </LinearLayout>

        <com.xz.keybag.custom.UnifyEditView
            android:id="@+id/remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/category_background"
            android:elevation="@dimen/dp_2"
            app:hint="啥也没有备注...(。_。)"
            app:hintColor="@color/secTextColor"
            app:label="备注:"
            app:lines="4"
            app:maxLines="4"
            app:mode="vertical"
            app:textColor="@color/category_text_2" />


        <TextView
            android:id="@+id/update_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_20"
            android:text="更新时间：" />

        <TextView
            android:id="@+id/create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_5"
            android:text="创建时间：" />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>