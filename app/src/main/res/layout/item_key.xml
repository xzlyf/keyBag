<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_yuanjiao"
    android:padding="@dimen/dp_10">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:text="名称"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_id_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="账号："
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <TextView
        android:id="@+id/user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="xxxxxxxxxxxx"
        app:layout_constraintLeft_toRightOf="@+id/user_id_tips"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <TextView
        android:id="@+id/user_psw_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:text="密码："
        app:layout_constraintLeft_toRightOf="@+id/user_id"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <TextView
        android:id="@+id/user_psw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="xxxxxxxxxxxx"
        app:layout_constraintLeft_toRightOf="@+id/user_psw_tips"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <ImageView
        android:id="@+id/state"
        android:layout_width="@dimen/dp_18"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_20"
        android:src="@drawable/ic_show"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/user_id"
        app:layout_constraintLeft_toRightOf="@+id/user_psw"
        app:layout_constraintTop_toTopOf="@+id/user_id" />

</androidx.constraintlayout.widget.ConstraintLayout>