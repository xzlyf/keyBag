<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddActivity">

    <ImageView
        android:id="@+id/tv_back"
        style="@style/img_onclick_yuanxing"
        android:layout_width="@dimen/dp_38"
        android:layout_height="@dimen/dp_38"
        android:layout_margin="@dimen/dp_20"
        android:padding="@dimen/dp_5"
        android:src="@drawable/ic_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/save"
        style="@style/img_onclick_yuanxing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_25"
        android:padding="@dimen/dp_5"
        android:text="保存"
        android:textColor="@color/primary_text"
        app:layout_constraintBottom_toBottomOf="@+id/tv_back"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_back" />

    <LinearLayout
        android:id="@+id/input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_50"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="@dimen/dp_35"
        app:layout_constraintTop_toBottomOf="@id/tv_back">

        <EditText
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_25"
            android:background="@null"
            android:hint="请输入名称"
            android:lines="1"
            android:maxLines="64"
            android:padding="@dimen/dp_12"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/primary_text"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@null"
            android:hint="在此输入账号"
            android:lines="1"
            android:maxLines="64"
            android:padding="@dimen/dp_12"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/primary_text" />

        <EditText
            android:id="@+id/psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="在此输入密码"
            android:lines="1"
            android:maxLines="64"
            android:padding="@dimen/dp_12"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/primary_text" />

        <EditText
            android:id="@+id/note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            android:background="@null"
            android:gravity="start"
            android:hint="备注信息"
            android:lines="5"
            android:maxLength="255"
            android:maxLines="64"
            android:padding="@dimen/dp_12"
            android:scrollbars="vertical"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/primary_text" />


    </LinearLayout>
    <!--图层-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_katong"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_layout" />
    <!--渐变白-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_gradient_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_layout" />


</androidx.constraintlayout.widget.ConstraintLayout>