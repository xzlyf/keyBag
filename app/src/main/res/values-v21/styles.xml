<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>


    <style name="menu_btn" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="et_line" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/orange</item>
        <item name="colorControlActivated">@color/white</item>
    </style>


    <!--TextInputLayout主题  theme-->
    <style name="text_input_layout_theme" parent="Theme.AppCompat.DayNight">
        <item name="colorAccent">#3498db</item>
        <item name="android:textColorHint">@color/primary_text</item>
        <item name="colorControlNormal">@color/transparent</item>
        <item name="colorControlActivated">@color/primary_text</item>
        <item name="colorControlHighlight">@color/INFO_COLOR</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="secret_textView">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="icon_textView" >
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingEnd">8dp</item>
        <!--自定义命名空间-->
        <item name="icon_paddingStart">10dp</item>
    </style>

</resources>