<?xml version="1.0" encoding="utf-8" ?>
<resources>
    <declare-styleable name="XButton">
        <!--半径-->
        <attr name="buttonRadius" format="integer" />
        <!--背景颜色-->
        <attr name="backgroundColor" format="color" />
        <!--是否填充-->
        <attr name="isFill" format="boolean" />
        <!--边框-->
        <attr name="buttonStrokeWidth" format="integer" />
        <!--字体颜色-->
        <attr name="buttonTextColor" format="color" />
        <!--指定圆角-->
        <attr name="whiceCirc">
            <flag name="topLeft" value="0" />
            <flag name="topRight" value="1" />
            <flag name="bottomLeft" value="2" />
            <flag name="bottomRight" value="3" />
        </attr>
        <!--是否反转-->
        <attr name="isReversal" format="boolean" />
    </declare-styleable>


    <declare-styleable name="ExtorEditView">
        <!--是否显示计数-->
        <attr name="showCount" format="boolean" />
        <!--技术总数/可输入最大数-->
        <attr name="total" format="integer" />
        <!--输入提示-->
        <attr name="hint" format="string" />
        <!--是否显示退格键-->
        <attr name="showBackspace" format="boolean" />
        <!--输入框最大行数-->
        <attr name="maxLines" format="integer"/>
        <!--输入框最大长度-->
        <attr name="maxLength" format="integer"/>
        <!--是否显示横线-->
        <attr name="showLine" format="boolean"/>
    </declare-styleable>
</resources>